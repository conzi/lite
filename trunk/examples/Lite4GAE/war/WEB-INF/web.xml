<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
	<filter>
		<filter-name>JSONModel</filter-name>
		<filter-class>org.xidea.lite.gae.JSONModelFilter</filter-class>
	</filter>
	<filter>
		<filter-name>Login</filter-name>
		<filter-class>org.xidea.lite.gae.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>JSONModel</filter-name>
		<url-pattern>*.xhtml</url-pattern>
		<url-pattern>/</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Login</filter-name>
		<url-pattern>/edit.action</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>edit</servlet-name>
		<servlet-class>org.xidea.lite.gae.EditServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>XMLTemplate</servlet-name>
		<servlet-class>
			org.xidea.lite.gae.TemplateServlet
		</servlet-class>
		<init-param>
			<param-name>contentType</param-name>
			<param-value>text/html;charset=UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>javax.xml.xpath.XPathFactory</param-name>
			<param-value>
				org.apache.xpath.jaxp.XPathFactoryImpl
			</param-value>
		</init-param>
		<init-param>
			<param-name>
				http://www.xidea.org/ns/lite/autoform
			</param-name>
			<param-value>form</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>edit</servlet-name>
		<url-pattern>/edit.action</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>XMLTemplate</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.xhtml</welcome-file>
	</welcome-file-list>
</web-app>
